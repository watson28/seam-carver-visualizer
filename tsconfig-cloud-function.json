{
  "compileOnSave": true,
  "compilerOptions": {
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "module": "commonjs",
    "esModuleInterop": true,
    "rootDir": "src",
    "moduleResolution": "node",
    "lib": [
      "es6"
    ],
    "outDir": "dist-cloud-function",
    "types": ["node", "express"]
  },
  "files": [
    "src/cloud-function.ts"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}
